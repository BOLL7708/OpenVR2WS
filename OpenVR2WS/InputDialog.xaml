<Window x:Class="OpenVR2WS.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenVR2WS"
        mc:Ignorable="d"
        Title="InputDialog" Height="80" Width="300"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <DockPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Name="buttonCancel" IsCancel="True" Margin="5" Width="60" VerticalContentAlignment="Center">Cancel</Button>
            <Label x:Name="labelValue" HorizontalContentAlignment="Right" Content="Label"  Margin="5" Width="60" VerticalContentAlignment="Center"/>
            <TextBox Name="textBoxValue"  VerticalContentAlignment="Center" Margin="5" Width="60" >Value</TextBox>
            <Button Name="buttonOk" IsDefault="True" Click="okButton_Click"  Margin="5" Width="60" VerticalContentAlignment="Center">OK</Button>
        </StackPanel>
    </DockPanel>
</Window>
